<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
    <title>Groupomania - Dashboard</title>
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">Groupomania</a>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/">Home</a>
        </li>
         <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/dashboard">Dashboard</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/auth/logout">Logout</a>
          </li>
        {{#if user}}
          <li class="nav-item">
            <a class="nav-link" href="/login">Login</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/register">Register</a>
          </li>
        {{/if}}
      </ul>
    </div>
  </div>
</nav>

<div class="container py-4 justify-content-center">

    <h2 id="admin_dashboard">Admin Dashboard</h2>

    {{#if message}}
        <h6 class="alert alert-success mt-4">{{message}}</h6>
    {{/if}}

    <div class="bg-light p-5 rounded-lg m-3">

      <div class="users_ctn">
        <h3>Users</h3>
        <span>Add, Edit or Delete users...</span>
      </div>

      <hr class="hr" />

      <table class="table table-dark table-stripped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Password</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          {{#each user}}
              <tr>
                <td>{{this.name}}</td>
                <td>{{this.email}}</td>
                <td>{{this.password}}</td>
                <td>
                  <a class="btn btn-sm btn-primary" onclick="toggleEditDiv('{{ this.name }}')">Edit</a>
                  <a href="delete/{{ this.name }}" class="btn btn-sm btn-danger">Delete</a>
                </td>
              </tr>
              <tr id="editUserDiv-{{ this.name }}" style="display: none; width: 100%;">
                <td colspan="4">
                  <div class="edit-form-wrapper">
                    <form action="/auth/update/{{ this.userId }}" method="POST">
                      <br>
                      <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" name="name" value="{{ this.name }}" aria-required="true">
                      </div>
                      <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email" value="{{ this.email }}" aria-required="true">
                      </div>
                      <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" name="password" aria-required="true">
                      </div>
                      <div class="mb-3">
                        <label for="passConfirm" class="form-label">Password Confirm</label>
                        <input type="password" class="form-control" id="passConfirm" name="passwordConfirm"  aria-required="true">
                      </div>
                      <button type="submit" class="btn btn-success">Edit user</button>
                    </form>
                  </div>
                </td>
              </tr>
          {{/each}}
        </tbody>
      </table>

      <hr class="hr" />

      <button class="btn btn-sm btn-warning" onclick="toggleAddUserForm()">ADD USER</button>

      <form id="addUserForm" style="display: none;" action="/auth/save" method="POST">
        <br>
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input type="text" class="form-control" id="name" name="name" value="{{ user.name }}" aria-required="true">
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input type="email" class="form-control" id="email" name="email" value="{{ user.email }}" aria-required="true">
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input type="password" class="form-control" id="password" name="password" value="{{ user.password }}" aria-required="true">
        </div>
        <div class="mb-3">
          <label for="passConfirm" class="form-label">Password Confirm</label>
          <input type="password" class="form-control" id="passConfirm" name="passwordConfirm" value="{{ user.password }}" aria-required="true">
        </div>
        <button type="submit" class="btn btn-success">Add user</button>
      </form>

      <script>
        function toggleAddUserForm() {
          var form = document.getElementById("addUserForm");
          if (form.style.display === "none") {
            form.style.display = "block";
          } else {
            form.style.display = "none";
          }
        }

        function toggleEditDiv(userId) {
          let div = document.getElementById("editUserDiv-" + userId);
          if (div.style.display === "none") {
            div.style.display = "contents";
          } else {
            div.style.display = "none";
          }
        }
      </script>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
</body>
</html>